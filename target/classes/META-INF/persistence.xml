<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="GestionLocationPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Liste des entitÃ©s -->
        <class>com.gestion.location.entities.Utilisateur</class>
        <class>com.gestion.location.entities.Immeuble</class>
        <class>com.gestion.location.entities.Unite</class>
        <class>com.gestion.location.entities.Locataire</class>
        <class>com.gestion.location.entities.Contrat</class>
        <class>com.gestion.location.entities.Paiement</class>

        <properties>
            <!-- Connexion PostgreSQL -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/gestion_db"/>
            <property name="jakarta.persistence.jdbc.user" value="gestion_user"/>
            <property name="jakarta.persistence.jdbc.password" value="Thiara3003."/>

            <!-- Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
